{
  "name": "frontend",
  "type": "module",
  "scripts": {
    "dev": "infisical run --project-config-dir=../.. --env=dev --path=/frontend -- vite --host",
    "build": "bun lint:tsc && vite build",
    "preview": "vite preview",
    "analyze": "bunx vite-bundle-visualizer",
    "lingui:extract": "lingui extract --clean",
    "lint": "sleep 1 && bun lint:tsc & bun lint:prettier & bun lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --ignore-path .gitignore --check --write .",
    "lint:eslint": "eslint . --flag unstable_ts_config"
  },
  "dependencies": {
    "@lingui/detect-locale": "^4.13.0",
    "@lingui/macro": "^4.13.0",
    "@lingui/react": "^4.13.0",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@tanstack/react-query": "^5.59.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "ky": "^1.7.2",
    "lucide-react": "^0.453.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.23.8",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@lingui/cli": "^4.13.0",
    "@lingui/format-json": "^4.13.0",
    "@lingui/swc-plugin": "^4.0.10",
    "@lingui/vite-plugin": "^4.13.0",
    "@modules/linter": "workspace:*",
    "@types/bun": "latest",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.3",
    "vite": "^5.4.9"
  },
  "prettier": "@modules/linter/config/prettier.config.js"
}
