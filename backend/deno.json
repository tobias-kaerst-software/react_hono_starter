    "check": "deno check src/main.ts",
    "lint": "deno lint src/main.ts"
  },
  "imports": {
    "$/": "./src/",
    "hono": "jsr:@hono/hono@^4.5.10",
    "mongodb": "npm:mongodb@^6.9.0",
    "zod": "npm:zod@^3.23.8"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  }
}
